<% if @note %>
	<p>Are you sure you want to delete the following note: 
		<p id="NoteName"><em>"<%= @note.content %>"?</em></p>
	</p>
	<form action="/<%= @note.id %>" method="post"id="delete">
		<!--Same with PUT, fake any HTTP request with a hidden input-->
		<input type="hidden" name="_method" value="delete">
		<input type="submit" value="Yes, Delete it!">
		<a href="/<%= @note.id %>"><input type="button" name="cancel" value="Cancel"></a>
	</form>
<% else %>
	<p>Note not found.</p>
<% end %>